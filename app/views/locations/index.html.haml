.scaffolds
  %h1 Listing locations

  %table
    %thead
      %tr
        %th Name
        %th Address
        %th Latitude
        %th Longitude
        %th
        %th
        %th

    %tbody
      - @locations.each do |location|
        %tr
          %td= location.name
          %td= location.address
          %td= location.latitude
          %td= location.longitude
          %td= link_to 'Show', location
          %td= link_to 'Edit', edit_location_path(location)
          %td= link_to 'Destroy', location, :class => 'alert', :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Location', new_location_path
  %br


